ユーザー詳細

<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><%= profile_img(@user) %></p>
      <h3 class="left"><%= @user.name %></h3>
      <p class="left"><%= @user.email %></p>
    </div>
    <p>フォロー一覧</p>
    <div id="user_area">

      <%= render partial: 'users/followed', locals: { user: @user }  %>
    </div>

    <p>フォロワーー一覧</p>
    <div id="user_area">
      <%= render partial: 'users/follower',locals: { user: @user }  %>
    </div>
    <%= link_to '戻る', users_path %>
  </div>
</div>

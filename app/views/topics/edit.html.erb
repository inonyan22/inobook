<h1>編集</h1>

<%= form_for(@topic) do |f| %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.label :写真 %>
  <%= f.file_field :image_url %>
  <%= f.hidden_field :image_url_cache %>
  <p><%= picture_img(@topic)%></p>
  <br>
  <%= f.submit'投稿', class: 'btn btn-primary btn-block'  %>
<% end %>

<%= link_to '戻る', topics_path %>

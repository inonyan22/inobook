<p><%= notice %></p>

<h1>投稿一覧</h1>
<p><%= link_to "新規投稿", new_topic_path, class: 'btn btn-default'  %></p>

<% @topics.each do |topic| %>
  <p>投稿者名<%= topic.user.name %></p>
  <p><%= topic.title %></p>
  <p><%= topic.content %></p>
  <p><%= picture_img(topic)%></p>
  <p><%= link_to "詳細画面", topic_path(topic.id), class: 'btn btn-default'  %></p>
          <p><%= link_to "編集画面", edit_topic_path(topic.id), class: 'btn btn-default' %></p>
          <p><%= link_to "削除する", topic_path(topic.id), data: {confirm: '本当に削除してよろしいですか？'}, method: :delete, class: 'btn btn-default' %></p>

  <% end %>
